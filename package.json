{
  "name": "drone-landing-page",
  "version": "1.0.0",
  "description": "Landing page about drones",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:bootstrap": "npx sass@1.64.2 --style=compressed --no-source-map --verbose ./src/sass/vendors/bootstrap-5.3.5.scss ./src/css/vendors/bootstrap-5.3.5.min.css",
    "build:sass": "sass --style=compressed --verbose ./src/sass/main.scss ./src/css/styles/styles.min.css",
    "build:css": "postcss ./src/css/main.css -o ./dist/css/styles.min.css --verbose",
    "build:js": "rollup --config",
    "build:html": "node ./htmlminifier.config.js",
    "build:images": "node ./imagesminifier.config.js",
    "build:icons": "node ./copyIcons.config.js",
    "build": "npm run build:html && npm run build:images && npm run build:icons && npm run build:bootstrap && npm run build:sass && npm run build:css && npm run build:js",
    "dev:bootstrap": "npx sass@1.64.2 --style=compressed --no-source-map --verbose --watch ./src/sass/vendors/bootstrap-5.3.5.scss ./src/css/vendors/bootstrap-5.3.5.min.css",
    "dev:sass": "sass --style=compressed --verbose --watch ./src/sass/main.scss ./src/css/styles/styles.min.css",
    "dev:css": "postcss ./src/css/main.css -o ./dist/css/styles.min.css --verbose --watch",
    "dev:js": "rollup --config --watch",
    "dev:html": "chokidar ./src/index.html --command \"npm run build:html && npm run build:css\"",
    "dev": "concurrently \"npm:dev:bootstrap\" \"npm:build:images\" \"npm:build:icons\" \"npm:dev:html\" \"npm:dev:sass\" \"npm:dev:css\" \"npm:dev:js\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "fs-extra": "^11.3.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^9.0.1",
    "imagemin-webp": "^8.0.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "rollup": "^4.40.1",
    "rollup-plugin-esbuild-minify": "^1.3.0",
    "sass": "^1.89.0",
    "swiper": "^11.2.8"
  }
}
